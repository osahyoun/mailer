<h2>Mailings</h2>

<table class="table">
    <tr>
        <th width="30%">Name</th>
        <th width="15%">Subject</th>
        <th width="15%">Sent to</th>
        <th width="10%">Opens</th>
        <th width="10%">Clicks</th>
    </tr>
    <% @mailings.each do |mailing| %>
    <tr>
        <td>
            <%= mailing.name %>
            <a class="btn btn-xs btn-default" href="/mailings/view/<%= mailing.id %>">View</a>
        </td>
        <td><%= mailing.subject %></td>
        <td><%= mailing.list.name %> (<strong><%= mailing.list.member_count%></strong>)</td>
        <td>-</td>
        <td>-</td>
    </tr>
    <% end %>
</table>