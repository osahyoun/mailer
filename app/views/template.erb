    <% form_for @template, "/templates/#{ @template.id || 'new' }" do |form| %>
        <div class="form-group">
            <%= form.text_field_block :name, caption: 'Name:', class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.text_field_block :subject, caption: 'Subject', class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.text_area_block :body_html, caption: 'Body - HTML', class: 'form-control', rows: '8' %>
        </div>
        <div class="form-group">
            <%= form.text_area_block :body_plain, caption: 'Body - Plain', class: 'form-control', rows: '8' %>
        </div>
        <div class="form-group">
            <%= form.submit_block 'Submit', class: 'btn btn-default' %>
        </div>
    <% end %>
